@model Crud.Models.Cliente;


@{
    ViewData["Title"] = "Cliente";
    var Clientes = ViewData["Clientes"] as List<Cliente>;
}

<h1>Ola seja bem vindo, ao espaço do cliente</h1>
<p> veja a seguir a tebela de lugares maravilhosos e suas promoções</p>

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Lugar</th>
                        <th>preço</th>
                        <th>Tempo</th>
                        <th>Situacao</th>
                    </tr>
                    <tbody>
                        @{
                           foreach (var cliente in Clientes)
                        {
                        <tr>
                            <td>@cliente.Id</td>
                             <td>@cliente.Lugar</td>
                             <td>@cliente.preco</td>
                             <td>@cliente.Tempo</td>
                            <td>@cliente.Situacao</td>
                        </tr>

                        }
                        }
                    </tbody>
                </table>

            <h2>Selecione Como deseja seu voo!</h2>
            <form asp-action="Index">
                <div class="form-row">
                    <div class="form-group col-md-6">
                    <label for="">Lugar</label>
                    <input asp-for="Lugar" Type="text" class="for-control" id="" placeholder="ex São Paulo">
                    </div></div>

                     <div class="form-group col-md-3">
                    <label for="">preco estimado</label>
                    <input asp-for="preco" Type="text" class="for-control" id="" placeholder="ex 1150">
                    </div>

                     <div class="form-group col-md-3">
                    <label for="">Tempo estimado</label>
                    <input asp-for="Tempo" Type="text" class="for-control" id="" placeholder="ops só n° ex 1">
                    </div>

                     <div class="form-group col-md-6">
                    <label for="">Situacao do vou para o lugar</label>
                    <select class="custom-select" asp-for="Situacao">
                        <option selected>-- Como esta a situação do voo</option>
                        <option>Ativo</option>
                        <option>Inativo</option>
                        <option>Bloqueado</option>
                    </select>
            
                    </div>
                    <button type="submit" class="btn btn-primary">Incluir</button>

                </form>
            </div>
        </div>
    </div>
   


